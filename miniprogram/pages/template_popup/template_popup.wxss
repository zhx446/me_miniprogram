/* pages/template_popup/template_popup.wxss */
.alert-menu {
    width: 90%;
    height: 90%;
    border-radius: 10rpx;
 }
 
 .alert-menu image{
    width: 100%;
    height: 300rpx;
 }
 
 .choose-mian,.choose-sugar,.choose-tem {
    width: 180rpx;
    padding: 15rpx 0rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
    border: 2rpx solid #E7E7E7;
    background-color: #F8F8F8;
    border-radius: 10rpx;
    text-align: center;
 }
 
 .choose-mian:hover,.choose-sugar:hover,.choose-tem:hover {
    background-color: #148B2D;
    color: #fff;
 }
 
 .popup {
    display: flex;
    flex-direction: column;
    align-items: baseline;
    padding: 25rpx;
 }
 
 .choose-ul {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
 }
 
 .price {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
    padding-top: 30rpx;
    border-top: 2rpx solid #F4F4F4;
 }
 
 .price .price-mian {
    text-align: left;
    margin-right: 200rpx;
 }
 .price-btn {
    color: #fff;
    width: 100%;
    background-color: #148B2D;
    border-radius: 50rpx;
    margin-top: 30rpx;
 }